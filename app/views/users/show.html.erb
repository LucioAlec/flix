<section class="user">
	<%= profile_image(@user) %>
	<h1><%=@user.name %></h1>
	<h2><%=@user.username %></h1>
	<h2><%= mail_to(@user.email) %> </h2>
	<h4>Member since </h3>
	<p>
	<%= @user.created_at.strftime("%B %Y") %>
	</p>
	<% if current_user_admin? || current_user?(@user) %>
		<div class= "actions">
			<%= link_to "Edit Account", edit_user_path(@user),	
												class: "button edit" %>

			<%= link_to "Delete Account",
								@user, class: "button delete",
								data:{turbo_method: :delete, turbo_confirm: "Sure?"} %>
		</div>
	<% end %>
	<% if @reviews.present? %>
		<h3> Reviews <h3>
		<% @reviews.each do |r| %>
			<div class="review">
				<div class="details">
					<span class="title">
					<%=link_to r.movie.title, r.movie %>
					</span>
					<%= pluralize(r.stars, 'star') %>
					<span class="date">
						<%= time_ago_in_words(r.created_at) %> ago
					</span>
					<p>
						<%= r.comment %>
					</p>
				</div>
			</div>
		<% end %>
	<% end %>
</section>